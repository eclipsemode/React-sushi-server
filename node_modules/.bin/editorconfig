#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*) basedir=`cygpath -w "$basedir"`;;
esac

if [ -z "$NODE_PATH" ]; then
  export NODE_PATH="/mnt/d/Programming/Web/Lime/server/node_modules/editorconfig/bin/node_modules:/mnt/d/Programming/Web/Lime/server/node_modules/editorconfig/node_modules:/mnt/d/Programming/Web/Lime/server/node_modules:/mnt/d/Programming/Web/Lime/node_modules:/mnt/d/Programming/Web/node_modules:/mnt/d/Programming/node_modules:/mnt/d/node_modules:/mnt/d/Programming/Web/Lime/server/node_modules/.pnpm/node_modules"
else
  export NODE_PATH="/mnt/d/Programming/Web/Lime/server/node_modules/editorconfig/bin/node_modules:/mnt/d/Programming/Web/Lime/server/node_modules/editorconfig/node_modules:/mnt/d/Programming/Web/Lime/server/node_modules:/mnt/d/Programming/Web/Lime/node_modules:/mnt/d/Programming/Web/node_modules:/mnt/d/Programming/node_modules:/mnt/d/node_modules:/mnt/d/Programming/Web/Lime/server/node_modules/.pnpm/node_modules:$NODE_PATH"
fi
if [ -x "$basedir/node" ]; then
  exec "$basedir/node"  "$basedir/../editorconfig/bin/editorconfig" "$@"
else
  exec node  "$basedir/../editorconfig/bin/editorconfig" "$@"
fi
